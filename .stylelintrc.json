{
  "extends": ["stylelint-config-standard", "stylelint-config-clean-order"],
  "ignoreFiles": ["dist/**", "coverage/**", "storybook-static/**"],
  "rules": {
    "selector-class-pattern": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global", "local"]
      }
    ]
  }
}
